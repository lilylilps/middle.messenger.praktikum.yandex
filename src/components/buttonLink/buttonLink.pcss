.button-link {
    text-decoration: none;

    &:visited {
        text-decoration: none;
    }

    &-blue {
        color: #3369F3;

        &:visited {
            color: #3369F3;
        }
    }

    &-red {
        color: #FF0000;

        &:visited {
            color: #FF0000;
        }
    }

    &-grey {
        align-self: flex-end;
        font-size: 12px;
        color: #999999;
        text-decoration: none;
        margin-right: 10px;
    }
}