.input {
    display: flex;
    flex-direction: column;
    gap: 8px;

    &__label {
        font-weight: 500;
        font-size: 9px;
        line-height: 9px;
        color: #999999;
    }

    &__field {
        border: none;
        border-bottom: 1px solid #3369F3;
        outline: none;
    }
}