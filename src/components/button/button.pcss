.button {
    width: 100%;
    border-radius: 8px;
    border: none;
    padding: 12px 70px;
    cursor: pointer;

    &:disabled {
        opacity: 50%;
    }

    &-blue {
        background: #3369F3;
        color: white;

        &:hover {
            background: #2753C4;
        }
    }

    &-red {
        background: #FF2F2F;
        color: white;

        &:hover {
            background: #d71111;
        }
    }
}