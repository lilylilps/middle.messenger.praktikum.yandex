.error {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 100%;

	&__code {
		font-size: 40px;
		line-height: 40px;
		margin-bottom: 20px;
	}

	&__message {
		font-weight: 500;
		margin-bottom: 70px;
	}

	&__link {
		color: #3369f3;
		text-decoration: none;

		&:visited {
			color: #3369f3;
			text-decoration: none;
		}
	}
}
