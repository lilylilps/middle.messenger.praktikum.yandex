placeholders: {
    login: 'ivanivanov',
    password: '6-12 символов'
}
---

<html>
    <head>
        <link rel="stylesheet" href="../../../index.pcss">
    </head>
    <body>
        <div class="sign-up">
            <h1>Вход</h1>
            <div class="sign-up__inputs">
                {{> input/input direction="vertical" label="Логин" type="text" placeholder=placeholders.login }}
                {{> input/input direction="vertical" label="Пароль" type="password" placeholder=placeholders.password }}
            </div>
            <div class="sign-up__buttons">
                <a href="../chats/chats.hbs">{{> button/button label="Войти" color="blue" }}</a>
                {{> buttonLink/buttonLink href="../signIn/signIn.hbs" label="Нет аккаунта?" color="blue" }}
            </div>
        </div>
    </body>
</html>
