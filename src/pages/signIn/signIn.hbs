    <body>
        <div class="sign-in">
            <h1>Регистрация</h1>
            <div class="sign-in__inputs">
                {{> input/input label="Email" type="email" placeholder=placeholders.email }}
                {{> input/input label="Логин" type="text" placeholder=placeholders.login }}
