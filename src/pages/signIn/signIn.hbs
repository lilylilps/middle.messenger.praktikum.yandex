                {{> input/input label="Фамилия" type="text" placeholder=placeholders.lastName }}
                {{> input/input label="Телефон" type="tel" placeholder=placeholders.phone }}
                {{> input/input label="Пароль" type="password" placeholder=placeholders.password }}
                {{> input/input label="Пароль (еще раз)" type="password" placeholder=placeholders.password }}
            </div>
            <div class="sign-in__buttons">
                <a href="../chats/chats.hbs">{{> button/button label="Зарегистрироваться" color="blue" }}</a>
                <a class="sign-in__buttons_link" href="../signUp/signUp.hbs">Войти</a>
            </div>
